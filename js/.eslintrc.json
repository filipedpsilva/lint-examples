{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        // This one is used for customized rules
        "custom-rules"
    ],
    "rules": {
        // Check https://eslint.org/docs/rules/ for more info on each one
        "capitalized-comments": "warn",
        "camelcase": "warn",
        "no-console": "warn",
        "eqeqeq": "error",
        "id-length": ["error", { "min": 3,"max": 10 }],
        "no-multi-spaces": [
            "error"
        ],
        "multiline-ternary": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            140
        ],
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "indent": [
            "error",
            2
        ],
        "max-params": [
            "error",
            3
        ],
        "max-lines": [
            "error",
            400
        ],
        "max-lines-per-function": [
            "error",
            10
        ],
        "init-declarations": [
            "error",
            "always"
        ],
        // customized rule
        "custom-rules/no-template-literals": 1
    }
}
